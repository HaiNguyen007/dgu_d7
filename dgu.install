<?php

function dgu_install() {
	include_once DRUPAL_ROOT . '/profiles/standard/standard.install';
	standard_install();

  //enable themes
	$themes = array(
		'theme_default' => 'dguk',
		'admin_theme' => 'seven'
	);
  theme_enable($themes);

  foreach ($themes as $key => $theme) {
    if (!is_numeric($key)) {
      variable_set($key, $theme);
    }
  }
  theme_disable(array('bartik'));

}
