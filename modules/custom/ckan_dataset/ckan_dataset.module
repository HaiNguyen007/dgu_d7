/**
 * Implements hook_menu_local_tasks_alter().
 */
function ckan_dataset_menu_local_tasks_alter(&$data, $router_item, $root_path) {
  // Add action link 'admin/structure/ckan_dataset/add' on 'admin/structure/ckan_dataset'.
  if ($root_path == 'admin/content/ckan_datasets') {
    $item = menu_get_item('admin/content/ckan_datasets/add');
    if ($item['access']) {
      $data['actions']['output'][] = array(
        '#theme' => 'menu_local_action',
        '#link' => $item,
      );
    }
  }
}


/**
